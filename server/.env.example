# 服务器端口
PORT=3001

# Node 环境
NODE_ENV=development

# CORS 跨域配置（多个来源用逗号分隔，或使用 * 允许所有来源）
CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173

# 数据路径
DATA_PATH=./GD

# 最大上传文件大小（字节）- 默认 100MB
MAX_UPLOAD_SIZE=104857600

# 最大批处理大小（单次请求最多处理的坐标数）
MAX_BATCH_SIZE=30000

# 内存 RSS 比率阈值（0-1 之间的小数）
# 当 Node.js 进程 RSS 占系统总内存的比例超过此值时，认为内存不足
# 默认 0.7 (70%)，建议保持此值以保留充足缓冲
MEMORY_RSS_THRESHOLD=0.7

# 内存绝对限制（字节）- 可选，如果设置则优先于 MEMORY_RSS_THRESHOLD
# 例如：设置为 512000000 表示 500MB
# MEMORY_ABSOLUTE_LIMIT_BYTES=512000000

# 日志等级
LOG_LEVEL=info

# 启用请求日志
ENABLE_REQUEST_LOGGING=true
